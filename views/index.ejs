<!DOCTYPE html>
<html>
<head>
	<title>Latitude Wine Cellar</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css"
</head>
<body>
	<div class="container" style="margin-top:10px;">
		<div class="navbar">
			<div class="navbar-inner">
				<a class="brand" href="/">Latitude Wine Cellar</a>
				<ul class="nav">
					<li class="active"><a href="/">Summary</a></li>
					<li><a href="/locations">Add Locations</a></li>
					<li><a href="/suppliers">Add Suppliers</a></li>
					<li><a href="/wines">Add Wines</a></li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="span12" style="border: 2px solid black">
				<% locations.forEach(function(location) { %>
					<div>
						<p>
						<%= location.siteName %>,
						<%= location.siteAddress %>,
						<%= location.sitePhone %>,
						<%= location.managerName %>,
						<%= location.managerContact %>,
						<%= location.managerEmail %>
						</p>
					</div>
				<% }) %>
			</div>
			<div class="span12" style="border: 2px solid black">
				<% suppliers.forEach(function(supplier) { %>
					<div>
						<p>
						<%= supplier.supName %>,
						<%= supplier.supAddress %>,
						<%= supplier.supPhone %>,
						<%= supplier.supAltPhone %>,
						<%= supplier.supEmail %>,
						<%= supplier.supContact %>
						</p>
					</div>
				<% }) %>
			</div>
			<div class="span12" style="border: 2px solid black">
				<% wines.forEach(function(wine) { %>
					<div>
						<p>
						<%= wine.wineName %>,
						<%= wine.wineProducer %>,
						<%= wine.wineColour %>,
						<%= wine.wineType %>,
						<%= wine.wineCountry %>
						</p>
					</div>
				<% }) %>
			</div>
		</div>			
	</div>
</body>
</html>
