<!DOCTYPE html>
<html ng-app='myApp'>
<head>
	<title>Latitude Wine Cellar</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
</head>
<body>
	<div class="container" style="margin-top:10px;">
		<div class="navbar">
			<div class="navbar-inner">
				<a class="brand" href="/">Latitude Wine Cellar</a>
				<ul class="nav">
					<li class="active"><a href="/">Home</a></li>
					<li><a href="/locations">Add Locations</a></li>
					<li><a href="/suppliers">Add Suppliers</a></li>
					<li><a href="/wines">Add Wines</a></li>
				</ul>
			</div>
		</div>
		<div class="row">
			<div ng-app='myApp' ng-controller='locationCtrl'>
				<select name="locationSelect">
					<option disabled selected> -- Select a location -- </option>
					<option ng-repeat='location in locations' value='{{location.siteName}}'>{{location.siteName}}
					</option>
				</select>
			</div>
		</div>			
	</div>
	<script src="js/angular/angular.js"></script>
	<script src="js/appAng.js"></script>
</body>
</html>
